{
  "name": "listboxkit",
  "version": "0.0.0-semantic-released",
  "description": "Small and flexible React hooks for building custom and accessible listbox components.",
  "repository": "git://github.com/brnrdog/listbox.git",
  "types": "./src/Listbox.d.ts",
  "scripts": {
    "test": "jest",
    "test:ci": "jest --collect-coverage",
    "build": "rescript build",
    "clean": "rescript clean",
    "start": "rescript build -w",
    "docs:start": "cd docs && yarn start",
    "docs:build": "cd docs && yarn build",
    "bundle": "rollup -c rollup.config.js"
  },
  "main": "dist/listbox.cjs.js",
  "module": "dist/listbox.esm.js",
  "keywords": [
    "rescript",
    "react",
    "listbox",
    "select",
    "dropdown"
  ],
  "author": "Bernardo Gurgel <brnrdog@hey.com>",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.1"
  },
  "devDependencies": {
    "@drewschrauf/bs-user-event": "^0.1.1",
    "@glennsl/bs-jest": "^0.5.1",
    "@rescript/react": "^0.10.3",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@testing-library/react": "^11.0.4",
    "@testing-library/react-hooks": "^3.4.1",
    "bs-jest-dom": "^4.1.1",
    "bs-webapi": "^0.19.1",
    "gentype": "^3.35.0",
    "jest": "^26.4.2",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-hooks-testing-library": "^0.6.0",
    "rescript": "^9.1.3",
    "rescript-dom-testing-library": "^1.0.2",
    "rescript-react-testing-library": "^1.1.0",
    "rollup": "^2.33.1",
    "rollup-plugin-analyzer": "^3.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "semantic-release": "^17.2.1",
    "typescript": "^4.0.2"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/__tests__/*Test.bs.js"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.bs.js",
      "!<rootDir>/src/Controls/Controls.bs.js",
      "!<rootDir>/src/__tests__/**/*.bs.js"
    ]
  }
}
